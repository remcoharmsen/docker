- alias: Zwembadfilter timer aan
  trigger:
  - platform: time
    at: '11:00:00'
  action:
    service: switch.turn_on
    entity_id: switch.zwembad_filter

- alias: Zwembadfilter timer uit
  trigger:
  - platform: time
    at: '17:00:00'
  action:
    service: switch.turn_off
    entity_id: switch.zwembad_filter
