- alias: Lights on in the morning
  trigger:
  - platform: template
    value_template: "{{ states('sensor.time') == (states.input_datetime.woonkamerverlichting_ochtend_aan.attributes.timestamp | int | timestamp_custom('%H:%M', False)) }}"
  condition:
    condition: time
    weekday:
      - mon
      - tue
      - wed
      - thu
      - fri
  action:
    service: scene.turn_on
    entity_id: scene.woonkamer_gedimd

- alias: Lights off, sunrise
  trigger:
  - platform: sun
    event: sunrise
    offset: 00:30:00
  action:
    service: homeassistant.turn_off
    entity_id: group.woonkamer

- alias: Lights on in the evening
  trigger:
  - platform: sun
    event: sunset
    offset: -00:45:00
  action:
    service: scene.turn_on
    entity_id: scene.woonkamer_normaal

- alias: Lights off, bedtime
  trigger:
  - platform: template
    value_template: "{{ states('sensor.time') == (states.input_datetime.woonkamerverlichting_avond_uit.attributes.timestamp | int | timestamp_custom('%H:%M', False)) }}"
  condition:
    condition: time
    weekday:
      - sun
      - mon
      - tue
      - wed
      - thu
  action:
    service: homeassistant.turn_off
    entity_id: group.woonkamer

- alias: Lights off, weekend bedtime
  trigger:
  - platform: template
    value_template: "{{ states('sensor.time') == (states.input_datetime.woonkamerverlichting_weekendavond_uit.attributes.timestamp | int | timestamp_custom('%H:%M', False)) }}"
  condition:
    condition: time
    weekday:
      - fri
      - sat
      - sun
  action:
    service: homeassistant.turn_off
    entity_id: group.woonkamer


